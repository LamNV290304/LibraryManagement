<Page x:Class="Library.UpdateBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Library"
     Title="UpdateBook" Height="526" Width="800"
        Background="#F5DEB3">
    <Grid Margin="0,10,20,46">
        <Border Background="White" CornerRadius="10" Padding="20" Margin="135,55,70,-19">
            <TextBlock FontSize="25" TextWrapping="Wrap" Margin="150,35,72,307"><Run FontWeight="Bold" Text="Update Book"/></TextBlock>
        </Border>
        <!-- Title Label and TextBox -->
        <Label Content="Book Title:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,157,0,0"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,157,0,0"/>

        <!-- Author Label and TextBox -->
        <Label Content="Author:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,197,0,0" />
        <TextBox x:Name="txtAuthor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,197,0,0" IsReadOnly="True"/>

        <!-- Genre Label and ComboBox -->
        <Label Content="Category:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,237,0,0"/>
        <ComboBox x:Name="cbGenre" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,237,0,0">
        </ComboBox>

        <!-- Publisher Label and ComboBox -->
        <Label Content="Publisher:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,277,0,0"/>
        <ComboBox x:Name="cbPublisher" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,277,0,0">
        </ComboBox>

        <!-- Publication Date Label and DatePicker -->
        <Label Content="Publishcation Year:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,317,0,0"/>

        <!-- Price Label and TextBox -->
        <Label Content="Total Copies" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,353,0,0"/>
        <TextBox x:Name="txtTotalCopies" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,357,0,0"/>
        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,389,0,0" RenderTransformOrigin="0.3,0.014"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,393,0,0"/>

        <!-- Add Book Button -->
        <Button Content="Update Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="240,436,0,0" Background="Blue" Foreground="White" Click="SaveButton_Click"/>
        <Button Content="Delete Book" HorizontalAlignment="Left" Margin="448,436,0,0" VerticalAlignment="Top" Width="150" Background="Red" Foreground="White" Click="DeleteButton_Click"/>
        <TextBox x:Name="txtPublicationYear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="248,317,0,0"/>
    </Grid>
</Page>
